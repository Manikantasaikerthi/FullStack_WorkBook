<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="student" class="com.klu.model.Student">
        <!-- Constructor Injection -->
        <constructor-arg value="101"/>
        <constructor-arg value="Bhavana"/>
        <constructor-arg value="Spring Framework"/>
        <constructor-arg value="2026"/>

        <!-- Setter Injection -->
        <property name="course" value="Advanced Spring"/>
        <property name="year" value="2027"/>
    </bean>

</beans>
